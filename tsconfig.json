{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["bun-types"],
    "baseUrl": ".",
    "paths": {
      "openclaw/plugin-sdk": ["./types/openclaw-plugin-sdk.d.ts"]
    }
  },
  "include": ["plugin/**/*.ts", "tests/**/*.ts", "types/**/*.d.ts"],
  "exclude": ["node_modules", "vendor"]
}
